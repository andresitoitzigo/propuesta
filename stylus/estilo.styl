gris_azulado = #353C45
gris_claro = #788594
azul = #3A99D8
rosa = #FFD4FF
body
	font-size 16px
	/*background url("../img/PRINCIPAL -01.jpg") no-repeat*/
	background rosa
	background-size 100%

.cuerpo
	margin 1em 6em 2em 6em

.slider
	background black

	background-size 100% 100%
	height 20.1em


.menu
	margin 1em 0em
	width 100%
	background gris_azulado
	text-align center
	position relative
	border-radius 5px

.menuItem
	margin 0
	padding 0
	list-style none
	.item
		display inline-block
		a
			color black
			text-decoration none
			display block
			padding: 0.7em 2em;
			-webkit-transition: .2s;
			-moz-transition: .2s;
			color gris_claro
			&:hover
				background #E5316C
				color white
				-webkit-transition: .2s;
				-moz-transition: .2s;


article 
	display inline-block
	
.noti
	background white
    font-size 0
	text-align center
	padding 0em 5em
article
	background #ccc
	border 2px solid lightgray
	border-radius 5px
	color black
	font-size 15px
	margin 10px
	width 150px
.noti
	img 
	-webkit-transition .2s

.noti article:hover img
	-webkit-transform scale(1.1)
.ventana
	width 100%
	height 100%
	color #FFF
	position fixed
	background-image url("../img/bg-modal.png")
	top 0
	left 0
.cerrar
	font-weight 900
	text-align right
.cerrar 
	a
	color red
.caja-redes
	display inline-block

	